extends layout.pug
block content

    include topNavbar.pug

    //- Layout    
    .wrapper
        //- Sidebar
        include leftNavbar.pug

        //- Page Content
        .container-fluid.gedf-wrapper
            //- Post card
            .card.gedf-card.card1
                .card-header
                    ul#myTab.nav.nav-tabs.card-header-tabs(role="tablist")
                        li.nav-item
                            a#posts-tab.nav-link.active(data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true")
                                | Informação
                        li.nav-item
                            a#images-tab.nav-link(data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images")
                                | Amigos
                .card-body
                    #myTabContent.tab-content
                        #posts.tab-pane.fade.show.active(role="tabpanel" aria-labelledby="posts-tab")
                            .card
                                .card-header
                                    .d-flex.justify-content-between.align-items-center
                                        .d-flex.justify-content-between.align-items-center
                                            a.mr-2(href=`/profiles/${user.email}`)
                                                img.rounded-circle(width="150" src=`${user.avatar}` alt="")
                                            .ml-2
                                            form.form-update(action="/update" method="POST")
                                                .h5.m-0
                                                    a(href=`/profiles/${user.email}`)
                                                .h7.text-muted
                                                    span Nome:
                                                    input#inputName.form-control(type="text" name="name" placeholder=`${user.name}` required)
                                                .h7.text-muted
                                                    span E-mail:                                                        
                                                    input#inputEmail.form-control(type="email" name="email" placeholder=`${user.email}` required autofocus)
                                                .h7.text-muted
                                                    span Aniversário:
                                                    input#inputDate.form-control(type="date" name="birthday" placeholder=`${user.birthday}` required)
                                                .h7.text-muted
                                                    span Curso:
                                                    input#inputCourse.form-control(type="text" name="course" placeholder=`${user.course}` required) 
                                                .h7.text-muted
                                                    span Biografia:
                                                    input#inputCourse.form-control(type="text" name="bio" placeholder=`${user.bio}`) 

                                                button.btn.btn-lg.btn-block#Register(type="submit") Guardar
                                                    
                        #images.tab-pane.fade(role="tabpanel" aria-labelledby="images-tab")
                            if (user.friends.length > 0)
                                each friend in user.friends
                                    a.mr-2(href=`/profiles/${user.email}`)
                                        img.rounded-circle(width="20" src=`${friend.avatar}` alt="")
                                        | 
                                        span= friend.name
                            else
                                | Nenhum amigo

        //- Chat
        include chat.pug
