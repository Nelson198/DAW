doctype html
html
    head
        title Registo
        //- Register style
        link(rel="stylesheet" href="/stylesheets/style-Login-Register.css")
        //- Bootstrap CSS
        link(rel="stylesheet" href="/stylesheets/bootstrap.min.css")
    body
        .container
            .row
                .col-sm-9.col-md-7.col-lg-5.mx-auto
                    .card.card-register.my-5
                        .card-body
                            h5.card-title.text-center Registar
                            form.form-register(action="/register" method="POST")
                                .form-label-group
                                    input#inputEmail.form-control(type="email" name="email" placeholder="Email" required autofocus)
                                    label(for="inputEmail") Email
                                .form-label-group
                                    input#inputCourse.form-control(type="text" name="course" placeholder="Curso" required)
                                    label(for="inputCourse") Curso
                                .form-label-group
                                    input#inputName.form-control(type="text" name="name" placeholder="Nome" required)
                                    label(for="inputName") Nome
                                .form-label-group
                                    select.form-control(name="gender" style="height: 50px" required)
                                        option(value="" disabled selected) Género
                                        option(value="male") Masculino
                                        option(value="female") Feminino
                                .form-label-group
                                    input#inputDate.form-control(type="date" name="birthday" placeholder="Data de nascimento" required)
                                    label(for="inputDate") Data de nascimento
                                .form-label-group
                                    input#inputPassword.form-control(type="password" name="password" placeholder="Password" required)
                                    label(for="inputPassword") Password
                                button.btn.btn-lg.btn-block.text-uppercase#Register(type="submit") Registar
                                hr.my-4
                            h5.card-title2.text-center Já te registaste ?
                            button.btn.btn-lg.btn-block.text-uppercase#Option(onclick=`goToPage("login")`) Fazer login

        //- JQuery 3.4.1
        script(src="/javascripts/jquery-3.4.1.slim.min.js")
        //- Bootstrap JS
        script(src="/javascripts/bootstrap.min.js")
        //- Axios
        script(src="/javascripts/axios.min.js")
        //- My JS
        script(src="/javascripts/actions.js")
