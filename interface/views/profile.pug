extends layout.pug
block content

    //- Layout    
    
    //- Top bar
    include topNavbar.pug

    //- Left bar
    include leftNavbar.pug

    //- Page Content
    .container-fluid.gedf-wrapper
        //- Post card
        .card.gedf-card.card1
            .card-header
                ul#myTab.nav.nav-tabs.card-header-tabs(role="tablist")
                    li.nav-item
                        a#posts-tab.nav-link.active(data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true")
                            | Informação
                    li.nav-item
                        a#members-tab.nav-link(data-toggle="tab" role="tab" aria-controls="members" aria-selected="false" href="#members")
                            | Amigos
                    li.nav-item
                        a#images-tab.nav-link(data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images")
                            | Publicações
            .card-body
                #myTabContent.tab-content
                    #posts.tab-pane.fade.show.active(role="tabpanel" aria-labelledby="posts-tab")
                        .card.mt-2
                            .card-header
                                // TODO - embelezar este "botão"
                                if (ownProfile)
                                    a(href="/profiles/updateProfile") Editar
                                .d-flex.justify-content-between.align-items-center
                                    .d-flex.justify-content-between.align-items-center
                                        a.ml-2(href=`/profiles/${profile.email}`)
                                            img.rounded-circle(width="150" src=`${profile.avatar}` alt="")
                                        .ml-4
                                            .h5.mb-2
                                                a(href=`/profiles/${profile.email}`)
                                                    span= profile.name
                                                    span  - 
                                                    span= profile.email
                                            .h7.text-muted.mb-1
                                                span Género: 
                                                if (profile.gender == "male")
                                                    span Masculino
                                                else
                                                    span Feminino
                                            .h7.text-muted.mb-1
                                                span Aniversário: 
                                                span= profile.birthday
                                            .h7.text-muted.mb-1
                                                span Curso: 
                                                span= profile.course
                                            .h7.text-muted.mb-1
                                                span Biografia: 
                                                span= profile.bio
                                            .h7.text-muted.mb-1
                                                span Amigos:
                                                br
                                                each friend in profile.friends
                                                    a.mr-2(href=`/profiles/${friend.email}`)
                                                        img.rounded-circle(width="20" src=`${friend.avatar}` alt="")
                                                        | 
                                                        span= friend.name

                    #members.tab-pane.fade(role="tabpanel" aria-labelledby="members-tab")
                        if (user.friends.length > 0)
                            each friend in user.friends
                                a.card.card-header.mt-2(href=`/profiles/${friend.email}`)
                                    .d-flex.justify-content-between.align-items-center
                                        .d-flex.justify-content-between.align-items-center
                                            .mr-2
                                                img.rounded-circle(width="45" src=`${friend.avatar}` alt="")
                                            .ml-2
                                                .h5.m-0
                                                    span= friend.name
                                                .h7.text-muted
                                                    span= friend.course
                        else
                            | Nenhum amigo

                    #images.tab-pane.fade(role="tabpanel" aria-labelledby="images-tab")
                        if (profile.posts.length > 0)
                            each post in profile.posts
                                .card.mb-2
                                    .card-body
                                        .text-muted.h7.mb-2
                                            i.fa.fa-clock-o= post.date
                                        p.card-text= post.description
                        else
                            | Nenhuma publicação

    //- Chat (Right bar)
    include chat.pug
